{
  "name": "geins",
  "version": "0.1.0",
  "author": "Geins",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/config/*",
    "packages/sdk/*"
  ],
  "scripts": {
    "build": "yarn codegen &&  turbo build",
    "dev": "turbo dev",
    "dev:nuxt": "turbo dev --filter=nuxt-app",
    "start:nuxt": "turbo start --filter=nuxt-app",
    "build:nuxt": "turbo build --filter=nuxt-app",
    "lint": "turbo lint",
    "link": "turbo run link",
    "format": "prettier --write \"**/*.{ts,md,vue,js}\"",
    "prepare": "husky",
    "clean": "node scripts/clean.js",
    "codegen": "yarn workspace @geins/types codegen",
    "prepare-schema": "node scripts/prepare-schema.js"
  },
  "lint-staged": {
    "*.{ts,md,vue,js}": [
      "yarn format",
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@commitlint/travis-cli": "^19.4.1",
    "husky": "^9",
    "lint-staged": "^15",
    "prettier": "^3.2.5",
    "prettier-plugin-vue": "^1.1.6",
    "turbo": "^2.0.7",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18"
  }
}