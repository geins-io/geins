{
  "name": "geins",
  "version": "0.1.0",
  "author": "Geins",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/config/*",
    "packages/sdk/*"
  ],
  "scripts": {
    "build": "yarn codegen &&  turbo build",
    "dev": "turbo dev",
    "dev:nuxt": "turbo dev --filter=nuxt-app",
    "start:nuxt": "turbo start --filter=nuxt-app",
    "build:nuxt": "turbo build --filter=nuxt-app",
    "build:sdk": "turbo build --filter=./packages/sdk/*",
    "lint": "turbo lint",
    "link": "turbo run link",
    "format": "prettier --write \"**/*.{ts,md,vue,js}\"",
    "prepare": "husky",
    "clean": "node scripts/clean.js",
    "codegen": "yarn workspace @geins/types codegen",
    "prepare-schema": "node scripts/prepare-schema.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "lint-staged": {
    "*.{ts,md,vue,js}": [
      "yarn format",
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/travis-cli": "^19.5.0",
    "@graphql-tools/jest-transform": "^2.0.0",
    "@mermaid-js/mermaid-mindmap": "^9.3.0",
    "@types/jest": "^29.5.13",
    "babel-jest": "^29.7.0",
    "graphql-tag": "^2.12.6",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-graphql": "^2.1.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^15.2.10",
    "mermaid": "^11.2.1",
    "prettier": "^3.3.3",
    "prettier-plugin-vue": "^1.1.6",
    "ts-jest": "^29.2.5",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2",
    "vitepress": "^1.3.4",
    "vitepress-plugin-mermaid": "^2.0.17"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18"
  }
}