{
  "name": "geins",
  "version": "0.1.0",
  "author": "Geins",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/config/*",
    "packages/sdk/*",
    "packages/framework/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:nuxt": "turbo dev --filter=nuxt-app",
    "start:nuxt": "turbo start --filter=nuxt-app",
    "build:nuxt": "turbo build --filter=nuxt-app",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,md,vue,js}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,md,vue,js}": [
      "yarn format",
      "yarn lint"
    ]
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.7",
    "typescript": "^5.4.5",
    "prettier-plugin-vue": "^1.1.6",
    "lint-staged": "^15",
    "husky": "^9"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18"
  }
}
